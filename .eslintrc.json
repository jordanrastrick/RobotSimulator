{
    "env": {
        "browser": false,
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "comma-dangle": ["warn", "always-multiline"],
        "eqeqeq": "warn",
        "func-names": "off",
        "indent": ["off", 2],
        "linebreak-style": ["error", "windows"],
        "no-console": "off",
        "no-empty": "off",
        "no-inner-declarations": "off",
        "no-redeclare": "warn",
        "no-restricted-globals": ["error", "Promise"],
        "no-undef": "warn",
        "no-unused-vars": ["warn", {"argsIgnorePattern": "^_|^var_args$"}],
        "quotes": ["warn", "single", "avoid-escape"],
        "semi": ["error", "always"]
    }
}
